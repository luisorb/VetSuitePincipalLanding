<section class="py-20 px-4 md:px-8 max-w-6xl mx-auto">
  <div class="flex flex-col md:flex-row items-center gap-12">
    <!-- Texto -->
    <div class="md:w-1/2">
      <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-6">
        Simplifica la gesti칩n de tu veterinaria con nuestra soluci칩n SaaS
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        Optimiza tus operaciones diarias, mejora el servicio a tus clientes y
        haz crecer tu negocio con nuestro sistema integral.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <a
          href="#demo"
          class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg text-center transition duration-300"
        >
          Solicitar Demo
        </a>
        <a
          href="#features"
          class="border border-blue-600 text-blue-600 hover:bg-blue-50 font-semibold py-3 px-8 rounded-lg text-center transition duration-300"
        >
          Conoce m치s
        </a>
      </div>
    </div>

    <!-- Carrusel -->
    <div
      class="md:w-1/2 relative aspect-video rounded-xl overflow-hidden shadow-xl border border-gray-200"
    >
      <div class="relative w-full h-full" id="image-carousel">
        <img
          src="/images/hero-vet1.webp"
          alt="Vista 1"
          class="carousel-image absolute inset-0 w-full h-full object-cover transition-all duration-[1500ms] opacity-100 z-20"
        />
        <img
          src="/images/hero-vet2.webp"
          alt="Vista 2"
          class="carousel-image absolute inset-0 w-full h-full object-cover transition-all duration-[1500ms] opacity-0 z-10"
        />
        <img
          src="/images/hero-vet3.webp"
          alt="Vista 3"
          class="carousel-image absolute inset-0 w-full h-full object-cover transition-all duration-[1500ms] opacity-0 z-10"
        />
        <img
          src="/images/hero-vet4.webp"
          alt="Vista 3"
          class="carousel-image absolute inset-0 w-full h-full object-cover transition-all duration-[1500ms] opacity-0 z-10"
        />
        <img
          src="/images/hero-vet5.webp"
          alt="Vista 3"
          class="carousel-image absolute inset-0 w-full h-full object-cover transition-all duration-[1500ms] opacity-0 z-10"
        />
      </div>
    </div>
  </div>

  <!-- JavaScript nativo para rotar im치genes -->
  <script>
    const images = document.querySelectorAll(".carousel-image");
    let current = 0;

    setInterval(() => {
      const previous = current;
      current = (current + 1) % images.length;

      images[previous].classList.remove("opacity-100", "z-20");
      images[previous].classList.add("opacity-0", "z-10");

      images[current].classList.remove("opacity-0", "z-10");
      images[current].classList.add("opacity-100", "z-20");
    }, 4000);
  </script>
</section>
