---
interface Props {
  icon: string;
  title: string;
  description: string;
  highlightColor?: "blue" | "emerald" | "indigo" | "amber" | "purple" | "rose";
}

const {
  icon,
  title,
  description,
  highlightColor = "blue",
} = Astro.props as Props;

const colorClasses = {
  blue: "bg-blue-100 text-blue-600",
  emerald: "bg-emerald-100 text-emerald-600",
  indigo: "bg-indigo-100 text-indigo-600",
  amber: "bg-amber-100 text-amber-600",
  purple: "bg-purple-100 text-purple-600",
  rose: "bg-rose-100 text-rose-600",
} as const;
---

<div
  class="group relative h-full bg-white p-8 rounded-2xl shadow-sm hover:shadow-md border border-gray-100 transition-all duration-300 hover:-translate-y-2"
>
  <div
    class="absolute inset-0 rounded-2xl bg-gradient-to-br from-white to-gray-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10"
  >
  </div>

  <div
    class={`w-16 h-16 ${colorClasses[highlightColor]} rounded-xl flex items-center justify-center mb-8 transition-all duration-300 group-hover:scale-110`}
  >
    <i class={`fas fa-${icon} text-2xl`}></i>
  </div>

  <h3 class="text-2xl font-bold text-gray-900 mb-4">{title}</h3>
  <p class="text-gray-600 leading-relaxed">{description}</p>

  <div class="mt-6">
    <a
      href="#"
      class="inline-flex items-center text-sm font-semibold text-gray-500 hover:text-${highlightColor}-600 transition-colors duration-300"
    >
      Saber m√°s
      <i class="fas fa-chevron-right ml-2 text-xs"></i>
    </a>
  </div>
</div>
